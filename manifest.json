{
    "manifest_version": 3,
    "name": "Wordle",
    "version": "0.0.1",
    "description": "Play Wordle In An Extension",
    "author": "Dylan Soll",
    "action":{
        "default_popup": "popup.html",
        "default_title": "Wordle Ext"
    },
    "permissions": ["storage", "scripting"],
    "content_scripts": [
      {"matches": ["*://*/*"],
      "css": ["popup_style.css"],
      "js": ["popup_function.js"]}
    ],
    "icons": {
      "16": "icons/padlock16.png"
   }
    
}